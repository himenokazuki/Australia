 <h2>検索結果 "<%= @content %>"</h2>
 <% if @users.present? %>
  <% @users.each do |user| %>
   <td>
    <%= render 'admin/users/user_detail', user: user, posts: user.posts %>
   </td>
   <td><%= link_to user.name, users_user_path(user) %></td>
   <td><%#= post.introduction %></td>

  <% end %>
 <% end %>
 <% if @posts.present? %>
  <% @posts.each do |post| %>
<table>
 <tr>
   <th>投稿画像</th>
   <th>投稿者</th>
   <th>投稿内容</th>
   <th></th>
 </tr>

 <tr>
    <td>
      <%= link_to users_post_path(post) do %>
        <%= image_tag post.get_image(100, 100) %>
      <% end %>
    </td>
    <td><%= link_to post.user.name, users_user_path(post.user) %></td>
    <td><%= post.introduction %></td>
    <td>
        <% if post.user == current_user %>
            <%= link_to '削除', users_post_path(post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        <% end %>
    </td>
  </tr>
 </table>
 <% end %>

<% end %>
